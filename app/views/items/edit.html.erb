<div class="col-sm-12 my-auto">
<h2 style="color: #B00100; margin: 0 auto">Edit <%= @item.name.camelize %></h2> <br/>

  <%= simple_form_for @item do |f| %>
<div class="form-group row">
  <div class="col-sm-10">
    <%= f.input :name, input_html: {class: "form-control form-control-sm",
                              id:"colFormLabelSm"} %>
  </div>
  <div class="col-sm-10">
    <%= f.input :price, input_html: {class: "form-control form-control-sm",
                                    id:"colFormLabelSm"}, required: true %>
  </div>
  <div class="col-sm-10">
    <%= f.input :description, label: t("item.description"),
                input_html: {class: "form-control form-control-sm",
                             id:"colFormLabelSm"} %>
  </div>

  <div class="col-sm-10">
    <%= f.button :submit, class: "btn btn-secondary",
    style: "margin-top: 15px" %>
  </div>
</div>

  <%#= form_tag item_path(@item), method: :put do %>
    <%#= label_tag :name %>
    <%#= text_field_tag :name, @item.name %>
    <%#= label_tag :price %>
    <%#= text_field_tag :price, @item.price %>
    <%#= label_tag :description %>
    <%#= text_field_tag :description, @item.description %>
    <%#= submit_tag "Update", class: "btn btn-large btn-primary" %>

<% end %>


<%#= button_to "index", items_path,  method: :get %>

  <%= render partial: 'shared/email' %>
</div>


