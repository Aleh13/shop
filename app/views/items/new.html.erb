<div class="col-sm-12 my_auto">
  <h3 style="color: #B00100; margin: 0 auto">Create Item</h3> <br/>

  <%#= form_tag items_path, method: :post do %>
  <%#= label_tag :name %>
  <%#= text_field_tag :name %>
  <%#= label_tag :price %>
  <%#= text_field_tag :price %>
  <%#= label_tag :description %>
  <%#= text_field_tag :description %>
  <%#=submit_tag "Save", class: "btn btn-large btn-primary" %>

  <%= simple_form_for @item do |f| %>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.input :name, input_html: {class: "form-control form-control-sm",
                                        id: "colFormLabelSm"} %>
      </div>
      <div class="col-sm-10">
        <%= f.input :price, input_html: {class: "form-control form-control-sm",
                                         id: "colFormLabelSm"}, required: true %>
      </div>
      <div class="col-sm-10">
        <%= f.input :description, label: t("item.description"),
                    input_html: {class: "form-control form-control-sm",
                                 id: "colFormLabelSm"} %>
      </div>

      <div class="col-sm-10">
        <%= f.button :submit, class: "btn btn-secondary",
                     style: "margin-top: 15px" %>
      </div>
    </div>
  <% end %>

  <%= render partial: 'shared/email' %>

</div>

